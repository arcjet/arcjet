{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": false,
    "preserveConstEnums": false
  },
  "exclude": ["lib", "node_modules"]
}
